<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="251dp"
        android:src="@drawable/rtoobg" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:backgroundTint="#60AAC9"
        app:cardCornerRadius="30sp">

        <LinearLayout
            android:layout_margin="9dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="10dp"
            android:orientation="vertical">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/searchVehicalNumber"
        android:textColorHint="@color/white"
        android:background="@drawable/green_border"
        android:padding="20dp"
        android:layout_margin="9dp"
        android:hint="Enter vehicle number"
        android:fontFamily="@font/comfortaa_light"
        />

            <Button
                android:id="@+id/search_button"
                android:layout_width="match_parent"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:layout_marginHorizontal="20dp"
                android:textStyle="bold"
                android:fontFamily="@font/comfortaa_light"
                android:layout_height="59dp"
                android:layout_gravity="center"
                android:text="search" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_margin="9dp"

        android:background="@drawable/green_border"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="9dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:padding="10dp"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:fontFamily="@font/comfortaa_light"
                android:text="Owner Name: "/>

            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:id="@+id/readOwnerName"
                android:text=""/>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:alpha="0.5"
            android:layout_margin="10dp"
            android:background="@color/black"

            android:layout_height="1dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="9dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:fontFamily="@font/comfortaa_light"
                android:textColor="@color/white"
                android:text="Vehicle brand: "/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/comfortaa_light"
                android:id="@+id/readVehicleBrand"
                android:text=""/>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:alpha="0.5"
            android:background="@color/black"
            android:layout_height="1dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="9dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:fontFamily="@font/comfortaa_light"
                android:textColor="@color/white"
                android:text="Vehicle RTO: "/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/comfortaa_light"
                android:id="@+id/readVehicleRTO"
                android:text=""/>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>